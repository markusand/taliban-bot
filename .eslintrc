{
  "extends": [
    "airbnb-base"
  ],
  "env": {
    "node": true,
    "es6": true,
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-tabs": "off",
    "indent": ["error", "tab", {
      "SwitchCase": 1
    }],
    "max-len": ["error", {
      "code": 100,
      "ignoreTrailingComments": true,
      "ignoreUrls": true,
      "ignoreStrings": true
    }],
    "no-param-reassign": ["error", { "props": false }],
    "object-curly-newline": ["error", {
      "multiline": true
    }],
    "camelcase": "off",
    "arrow-parens": ["error", "as-needed"],
  }
}
